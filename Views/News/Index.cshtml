@model IEnumerable<GenaroSilvestre.Models.News>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="noticias-header">Lista de noticias</div>


<div class="noticia-wrapper">
    <p>
        @Html.ActionLink("Crear Noticia", "Create", "", new { @class = "btn btn-default" })
    </p>
    
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-2 times-bold table-padding uppercase">
                @Html.DisplayFor(modelItem => item.Title)
            </div>
            <div class="col-md-3 times-regular table-padding">
                @Html.DisplayFor(modelItem => item.Text).ToString().Substring(0, 100)...
            </div>
            <div class="col-md-2 noticias-image-thumb table-padding">
                <img src="@item.Image" />
            </div>
            <div class="col-md-1 times-regular table-padding">
                @Html.DisplayFor(modelItem => item.Created)
            </div>
            <div class="col-md-1 times-regular table-padding">
                @Html.DisplayFor(modelItem => item.Updated)
            </div>
            <div class="col-md-1 times-regular table-padding">
                @Html.DisplayFor(modelItem => item.User.Name) @Html.DisplayFor(modelItem => item.User.LastName)
            </div>
            <div class="col-md-2 times-regular table-padding">


                <div class="btn btn-default" aria-label="Left Align">
                    @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-search text-decoration-none" })
                </div>
                <div class="btn btn-default" aria-label="Left Align">
                    @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil text-decoration-none" })
                </div>
                <div class="btn btn-default" aria-label="Left Align">
                    @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash text-decoration-none" })
                </div>
                <br />
                <br />
            </div>
        </div>
    }
</div>
