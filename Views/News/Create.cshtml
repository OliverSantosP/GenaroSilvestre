@model GenaroSilvestre.Models.News

@{
    ViewBag.Title = "Crear Noticia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="noticias-header">
    Crear Noticia
</div>
<div class="main-wrapper">
    @using ((Html.BeginForm("Create", "News",
      FormMethod.Post, new { enctype = "multipart/form-data" })))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.Title, new { @class = "form-label col-md-1" })
                <div class="col-md-12">
                    @Html.TextBoxFor(model => model.Title, new { @class = "input-spaced" })
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.TextAreaFor(model => model.Text, new { @id = "my-textarea" })
                    @Html.ValidationMessageFor(model => model.Text)
                </div>
            </div>

            <div class="form-group">
                <div class="form-label col-md-1">Imagen</div>
                <div class="col-md-10">
                    <input type="file" name="file" value="Image">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Crear" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Volver a lista", "Index")
    </div>
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/ckeditor/adapters/jquery.js"></script>

    <script type="text/javascript">
        $(function () {
            $('#my-textarea').ckeditor();
        });
    </script>
</div>

