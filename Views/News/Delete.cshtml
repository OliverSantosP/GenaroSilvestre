@model GenaroSilvestre.Models.News

@{
    ViewBag.Title = Resources.Resources.NewsDelete;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();

    string NewsText;
    string NewsTitle;

    if (culture == "es")
    {
        NewsText = Model.Text;
        NewsTitle = Model.Title;
    }
    else
    {
        NewsText = Model.TextEnglish;
        NewsTitle = Model.TitleEnglish;
    }
    }

    <div class="noticias-header">@Resources.Resources.NewsDelete</div>

    <div class="main-wrapper">
    <div class="alert alert-danger times-bold text-big" role="alert">@Resources.Resources.StandardDeleteHint</div>


    <br />
    <div class="row">
        <div class="col-md-2 times-bold">
            @Html.DisplayNameFor(model => model.Title)
        </div><div class="col-md-6 times-regular">
            @Html.DisplayFor(model => model.Title)
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-md-2 times-bold">
            @Html.DisplayNameFor(model => model.Text)
        </div>
        <div class="col-md-6 times-regular">
            @if (NewsText.Length > 300)
            {
                @Html.Raw(NewsText.Substring(0, 300));
            }
            else
            {
                @Html.Raw(NewsText);
            }
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-md-2 times-bold">
            @Html.DisplayNameFor(model => model.Image)
        </div><div class="col-md-2 noticias-image-thumb">
            <img src="@Html.ValueFor(model=> model.Image)" />
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-md-2 times-bold">
            @Html.DisplayNameFor(model => model.Created)
        </div><div class="col-md-2 times-regular">
            @Html.DisplayFor(model => model.Created)
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-md-2 times-bold">
            @Html.DisplayNameFor(model => model.Updated)
        </div><div class="col-md-2 times-regular">
            @Html.DisplayFor(model => model.Updated)
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-md-2 times-bold">
            @Html.DisplayNameFor(model => model.User.UserName)
        </div><div class="col-md-2 times-regular">
            @Html.DisplayFor(model => model.User.UserName)
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="form-actions no-color">
                <div class="col-md-3">
                    <br />
                    <input type="submit" value="@Resources.Resources.StandardDelete" class="btn btn-default" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <br />
                @Html.ActionLink(Resources.Resources.StandardBackToList, "Index")
            </div>
        </div>
    }
</div>

