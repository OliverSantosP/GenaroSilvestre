@{
    ViewBag.Title = "Genaro Silvestre - Contacto";
}
@model GenaroSilvestre.Models.ContactModels

<div class="noticias-header">
    @Resources.Resources.ContactTitle
</div>
<div class="main-wrapper" id="noticia-wrapper">
    <div class="areas-image-frame">
        <div class="noticia-image">
            <img src="~/Content/images/Contactos-Image.jpg" />
        </div>
    </div>
    <div class="areas-image-shadow"></div>
    <div class="noticia-text-wrapper">
        <div class="areas-gray-background">
            <div class="row">
                <div class="col-md-6">
                    <div class="title-medium">@Resources.Resources.ContactAddress</div>
                    <div class="times-regular">
                        Edificio Patio Panatlantic - Suite # 17,<br />
                        Calle General Gregorio Luperon # 4,<br />
                        casi esquina Francisco Rihiez Ducoudray,<br />
                        Centro de la ciudad de La Romana, Rep. Dom.<br /><br />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="title-medium">@Resources.Resources.ContactPhone</div>
                    <div class="times-regular">
                        809-813-3131
                    </div>
                    <br />
                    <div class="title-medium">@Resources.Resources.ContactMobile</div>
                    <div class="times-regular">
                        809-707-7052
                    </div>
                    <br />
                    <div class="title-medium">@Resources.Resources.ContactEmail</div>
                    <div class="times-regular">
                        genarosilvestre@gmail.com
                    </div>
                </div>

            </div>
        </div>
    </div>

    @using (Html.BeginForm("Contact", "Home"))
    {
        @Html.AntiForgeryToken()

        <div class="areas-form-gray-background">


            <div class="gray-header">
                @Resources.Resources.ContactFormTitle
            </div>
            <div class="col-md-12">
                <div class="times-regular">@ViewBag.ContactMessage</div>
                @Html.ValidationSummary()
            </div>
            <div class="row">
                <div class="col-md-6">

                    <div class="input-spaced">
                        @Html.TextBoxFor(m => m.Name, new { @class = "input-wide", @placeholder = @Resources.Resources.ContactFormName })
                    </div>
                    <div class="input-spaced">
                        @Html.TextBoxFor(m => m.Address, new { @class = "input-wide", @placeholder = @Resources.Resources.ContactFormAddress })
                    </div>
                    <div class="input-spaced">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "input-wide", @placeholder = @Resources.Resources.ContactFormPhone })
                    </div>
                    <div class="input-spaced">
                        @Html.TextBoxFor(m => m.Email, new { @class = "input-wide", @placeholder = @Resources.Resources.ContactFormEmail })
                    </div>
                    <div class="input-spaced">
                        @Html.TextBoxFor(m => m.City, new { @class = "input-wide", @placeholder = @Resources.Resources.ContactFormCity })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="input-spaced">
                        @Html.TextAreaFor(m => m.Comment, new { @class = "input-wide span6", @placeholder = @Resources.Resources.ContactFormComment, @rows = "12" })
                    </div>
                </div>
            </div>
            <div class="form-button input-spaced">
                <input type="submit" class="btn btn-default" value="@Resources.Resources.ConctactFormSend" />
            </div>
        </div>
    }
</div>
<div class="main-wrapper" id="noticia-wrapper">
    <div class="areas-map-image-frame">
        <div class="noticia-image">
            <div id="map_canvas"></div>
        </div>
    </div>
    <div class="areas-image-shadow"></div>
    </div>
    <script src="https://maps.googleapis.com/maps/api/js"></script>
    <script>
        function initialize() {
            var mapCanvas = document.getElementById('map_canvas');
            var mapOptions = {
                center: new google.maps.LatLng(18.428031, -68.980013),
                zoom: 14,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            }
            var map = new google.maps.Map(mapCanvas, mapOptions)
        }
        google.maps.event.addDomListener(window, 'load', initialize);
    </script>
