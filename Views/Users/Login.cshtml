@model GenaroSilvestre.Models.Users

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Users", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="main-wrapper">
        <div class="form-horizontal">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <div class="row">
                <div class="col-md-2">
                    <h2>Login</h2>
                    <hr />
                    @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    @Html.EditorFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-10">
                    <input type="submit" value="Log In" class="btn btn-default" />
                </div>
            </div>
            <br />
            <div>
                @Html.ActionLink(@Resources.Resources.StandardBackToList, "Index")
            </div>
            </div>
        </div>
}
