@model IEnumerable<GenaroSilvestre.Models.Users>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="noticias-header">Lista de usuarios</div>

@foreach (var item in Model.OrderByDescending(x => x.Created))
{
    <p>
        @Html.ActionLink("Crear", "Create", "", new { @class = "btn btn-default" })
    </p>

    <div class="row">
        <div class="col-md-2 times-bold table-padding">
            @Html.DisplayFor(modelItem => item.UserName)
        </div>

        <div class="col-md-2 table-padding">
            @Html.DisplayFor(modelItem => item.Email)
        </div>

        <div class="col-md-2 table-padding">
            @Html.DisplayFor(modelItem => item.Name)
        </div>

        <div class="col-md-2 table-padding">
            @Html.DisplayFor(modelItem => item.LastName)
        </div>

        <div class="col-md-2 table-padding uppercase">
            @Html.DisplayFor(modelItem => item.Updated)
        </div>

        <div class="col-md-2 times-regular table-padding">
            <div class="btn btn-default" aria-label="Left Align">
                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil text-decoration-none" })
            </div>
            <div class="btn btn-default" aria-label="Left Align">
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash text-decoration-none" })
            </div>
            <br />
            <br />
        </div>

    </div>
}
