@model GenaroSilvestre.Models.Users

@{
    ViewBag.Title = "Editar Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="noticias-header">
    Editar Usuarios
</div>

@using (Html.BeginForm())
{
    <div class="main-wrapper">
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary()
        @Html.HiddenFor(model => model.Id)
        <div class="row">
            <div class="col-md-2">
                @Html.LabelFor(m => m.Name, new { @class = "form-label" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                @Html.EditorFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>



        <div class="row">
            <div class="col-md-2">
                @Html.LabelFor(m => m.LastName, new { @class = "form-label" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                @Html.EditorFor(m => m.LastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.LastName)
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                @Html.EditorFor(m => m.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                @Html.EditorFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>


        <div class="row">
            <div class="col-md-2">
                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                @Html.EditorFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>


        <br />
        <div class="row">
            <div class="col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>

        <br />
        <div>
            @Html.ActionLink("Volver a la lista de Usuarios.", "Index")
        </div>

    </div>

              }





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
